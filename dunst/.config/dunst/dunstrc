# vim: ft=cfg
[global]
  #font = "System San Francisco Display Regular 13"
  font = xos4 Terminus Regular 8

  allow_markup = no
  plain_text = no

  # The format of the message
  # %a appname
  # %s summary
  # %b body
  # %i iconname (including its path)
  # %I iconname (w/o its path)
  # %p progress value if set ([  0%] to [100%]) or nothing
  # Markup is allowed if enabled
  format = "%s\n%b"

  # Sort by urgency
  sort = yes

  # Show how many messages are currently hidden (because of geometry).
  indicate_hidden = yes

  # Alignment
  # "left", "center" and "right"
  alignment = center

  bounce_freq = 0
  show_age_threshold = 60
  word_wrap = yes
  ignore_newline = no

  # The geometry of the window:
  #   [{width}]x{height}[+/-{x}+/-{y}]
  geometry = "300x30-40+40"

  shrink = no
  transparency = 0
  idle_threshold = 120
  monitor = 0
  follow = mouse
  sticky_history = yes
  history_length = 20
  show_indicators = yes
  line_height = 5
  notification_height = 40
  separator_height = 2
  padding = 8
  horizontal_padding = 8
  separator_color = auto
  startup_notification = false

  # Browser for opening urls in context menu
  browser = /usr/bin/firefox -new-tab

  # Align icons left/right/off
  icon_position = off

  # Paths to default icons
  icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[frame]
  width = 0

[shortcuts]
  # Shortcuts are specified as [modifier+][modifier+]..key
  # Available modifiers are "ctrl", "mod1" (alt), "mod2",
  # "mod3" and "mod4" (windows key)
  # Xev is helpful for finding names of keys

  # Close notification
  close = ctrl+space

  # Close all notifications.
  close_all = ctrl+shift+space

  # Redisplay last message(s)
  history = ctrl+grave

[urgency_low]
  background = "#f0f0f0"
  foreground = "#2b3635"
  timeout = 10

[urgency_normal]
  background = "#f0f0f0"
  foreground = "#2b3635"
  timeout = 10

[urgency_critical]
  background = "#f0f0f0"
  foreground = "#99736e"
  timeout = 0
